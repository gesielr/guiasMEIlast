# Configuração do ambiente
NODE_ENV=development
PORT=3333

# Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Frontend
FRONTEND_URL=http://localhost:3000

# WhatsApp
WHATSAPP_NUMBER=5511999999999
WHATSAPP_WELCOME_TEMPLATE=Olá! Sou a IA do GuiasMEI. Estou aqui para te ajudar com suas guias e notas fiscais.

# Stripe
STRIPE_PRICE_ID=price_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Sicoob Integration
# Ambiente: sandbox ou production
SICOOB_ENVIRONMENT=sandbox

# URLs da API Sicoob
SICOOB_API_BASE_URL=https://api-sandbox.sicoob.com.br
SICOOB_BOLETO_BASE_URL=https://api-sandbox.sicoob.com.br/cobranca-bancaria/v3
SICOOB_AUTH_URL=https://auth-sandbox.sicoob.com.br/auth/realms/cooperado/protocol/openid-connect/token

# Credenciais OAuth 2.0 Sicoob
SICOOB_CLIENT_ID=seu_client_id_aqui
# SICOOB_CLIENT_SECRET é opcional - o Sicoob pode não fornecer esse valor
SICOOB_CLIENT_SECRET=

# Escopos da API Sicoob (separados por espaço ou vírgula)
# Escopos disponíveis: pix.read pix.write cob.read cob.write cobv.read cobv.write 
# webhook.read webhook.write boletos_consulta boletos_inclusao boletos_alteracao 
# webhooks_consulta webhooks_inclusao webhooks_alteracao
SICOOB_SCOPES=pix.read pix.write cob.read cob.write cobv.read cobv.write webhook.read webhook.write boletos_consulta boletos_inclusao boletos_alteracao webhooks_consulta webhooks_inclusao webhooks_alteracao

# Certificados mTLS (ICP-Brasil) para autenticação Sicoob
SICOOB_CERT_PATH=./certificates/sicoob-cert.pem
SICOOB_KEY_PATH=./certificates/sicoob-key.pem
SICOOB_CA_PATH=./certificates/sicoob-ca.pem

# Segredo do webhook Sicoob
SICOOB_WEBHOOK_SECRET=seu_webhook_secret_aqui

# Configurações opcionais do Sicoob
SICOOB_TIMEOUT=30000
SICOOB_RETRY_ATTEMPTS=3
SICOOB_RETRY_DELAY=1000

# Ambiente da API NFS-e (production | homologation)
NFSE_ENVIRONMENT=production

# URLs da API NFS-e (serão sobrescritas se NFSE_ENVIRONMENT=homologation)
NFSE_BASE_URL=https://api.adn.nfse.gov.br
NFSE_CONTRIBUINTES_BASE_URL=https://api.adn.nfse.gov.br/contribuintes
NFSE_PARAMETROS_BASE_URL=https://api.adn.nfse.gov.br/parametros
NFSE_DANFSE_BASE_URL=https://api.adn.nfse.gov.br/danfse

# Certificado digital (PFX)
NFSE_CERT_PFX_PATH=/path/to/certificate.pfx
NFSE_CERT_PFX_BASE64=base64-do-certificado
NFSE_CERT_PFX_PASS=senha-do-certificado

# Certificado digital (PKCS#11)
NFSE_CERT_PKCS11_LIBRARY=/path/to/pkcs11.so
NFSE_CERT_PKCS11_SLOT=0
NFSE_CERT_PKCS11_PIN=1234

# Criptografia de credenciais
NFSE_CREDENTIAL_SECRET=chave-de-32-chars-para-criptografia
